@model Webima.ViewModels.CategoriasViewModel

@{
    ViewData["Title"] = "Gestão das Categorias";
}

<div class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h1>@ViewData["Title"]</h1>
                <br/><br/>
                <div id="lista">
                    <partial name="ListaCategorias" model="Model.Categorias"/>
                </div>
            </div>
            <div class="col-lg" id="CatForm">
                <partial name="AdicionarCategoria" model="Model.Categoria"/>
            </div>
        </div>
    </div>
</div>

<script>
    function MudarForm () {
        fetch('@Url.Action("ListaCategorias")')
          .then(response => response.text())
          .then(data => {
            document.querySelector('#lista').innerHTML = data;
            alert("Categorias atualizadas!");
          });
    }
</script>
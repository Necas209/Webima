@model Webima.ViewModels.SalasViewModel

@{
    ViewData["Title"] = "Gestão das Salas";
}

<div class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h1>@ViewData["Title"]</h1>
                <br /><br />
                <div id="lista">
                    <partial name="ListaSalas" model="Model.Salas" />
                </div>
            </div>
            <div class="col-lg" id="SalaForm">
                <partial name="AdicionarSala" model="Model.Sala" />
            </div>
        </div>
    </div>
</div>

<script>
    function MudarForm () {
        fetch('@Url.Action("ListaSalas")')
          .then(response => response.text())
          .then(data => {
            document.getElementById('lista').innerHTML = data;
            alert('Salas atualizadas!');
          });
    }
</script>

